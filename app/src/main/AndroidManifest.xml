<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.co.icomsys.it21.fruitbasket" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name=".BookListActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="jp.co.icomsys.it21.fruitbasket.WebSearchActivity"
            android:label="@string/title_activity_web_search">
        </activity>

    </application>
    <!-- Web検索のために INTERNET パーミッションを追加 -->
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>

